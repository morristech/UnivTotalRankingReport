<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="shin.kr.co.levision.webproject.LoginActivity">

    <ImageView
        android:alpha="0"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo"
        android:layout_width="172dp"
        android:layout_height="140dp"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:alpha="0"
        android:orientation="vertical"
        android:background="@drawable/background_edit_login"
        android:layout_width="204dp"
        android:layout_height="95dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:layout_marginTop="89dp"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:background="@drawable/background_edit_login"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/school_01"
                android:layout_width="19dp"
                android:layout_height="20dp" />

            <EditText
                android:nextFocusDown="@+id/Login_PassworkEditText"
                android:singleLine="true"
                android:background="@null"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/Login_SchoolEditText" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/background_edit_login"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/password"
                android:layout_width="19dp"
                android:layout_height="20dp" />

            <EditText
                android:nextFocusDown="@+id/Login_button"
                android:singleLine="true"
                android:background="@null"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/Login_PassworkEditText" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:alpha="0"
        android:onClick="loginButtonClick"
        android:text="Login"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:background="#FF991F"
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/Login_button" />

</RelativeLayout>
